<header class="masthead rich-text-image" style="background-image: url('/assets/banner_img.png')">
  <div class="container position-relative px-4 px-lg-5">
      <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
          <div class="site-heading">
            <h1 id="blog"><strong>Blogs</strong></h1>
            <span class="subheading"></span>
          </div>
        </div>
      </div>
  </div>
</header>
<div class="container px-4 px-lg-5">
  <div class="row gx-1 justify-content-center">
    <% @blogs.each do |blog| %>
      <div class="col-lg-4 col-md-6 col-sm-12 mx-auto"> <!-- Added responsive classes and mx-auto -->
        <div class="card mb-4 custom-card">
          <% if blog.banner_image? %>
            <div class="image-container">
              <%= image_tag blog.banner_image.url, class: "card-img-top card-img custom-card-image", alt: blog.heading.truncate(60).capitalize %>
              <div class="image-overlay">
                <h2 class="image-heading"><%= blog.heading.truncate(60).capitalize %></h2>
              </div>
            </div>
          <% end %>
          <div class="card-body">
            <h2 class="card-title custom-card-title">
              <%= truncate(strip_tags(blog.heading).capitalize, length: 60) if blog.heading.present? %> 
            </h2>
            <p class="card-text custom-card-text">
              <% if blog.author.present? %>
                <span class="author-info card-color" style="color: indigo;">
                  <%= blog.created_at.strftime("%B %d, %Y") %>
                </span>
              <% end %>
              <br>
              <%= truncate(strip_tags(blog.content).capitalize, length: 150) if blog.content.present? %>
            </p>
            <%= link_to blog_path(blog), class: 'image-class custom-read-more-link btn-sm', id: 'read-more-link' do %>
              <%= image_tag 'ic2.png', alt: 'Image Alt Text', class: 'image-class', width: 40, height: 40, id: 'icon-image' %>
              <span class="text-image">Read More</span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @blogs, outer_window: 0, inner_window: 1,
     previous_label: '<i class="fas fa-chevron-left"></i> Previous'.html_safe,
     next_label: 'Next <i class="fas fa-chevron-right"></i>'.html_safe,
     params: { controller: 'blogs', action: 'index' },
     page_links: false %>
</div>
